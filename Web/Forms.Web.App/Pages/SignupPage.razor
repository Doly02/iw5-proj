@page "/signup"
@inject NavigationManager NavigationManager

<h3>Registrace</h3>

<EditForm  OnValidSubmit="HandleSignup">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="form-group">
        <label for="firstName">Křestní jméno</label>
        <InputText id="firstName" class="form-control"  />
    </div>

    <div class="form-group">
        <label for="lastName">Příjmení</label>
        <InputText id="lastName" class="form-control"  />
    </div>
    
    <div class="form-group">
        <label for="email">Email</label>
        <InputText id="email" class="form-control"  />
    </div>

    <div class="form-group">
        <label for="password">Heslo</label>
        <InputText id="password" type="password" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Registrovat</button>
</EditForm>

@if (ErrorMessage != null)
{
    <div class="alert alert-danger mt-2">@ErrorMessage</div>
}

