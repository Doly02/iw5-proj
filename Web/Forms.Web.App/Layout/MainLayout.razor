@inherits LayoutComponentBase
@namespace Forms.Web.App

<style>
    .bg-sec {
        background-color: #F8F8F8;
    }
</style>

<NavMenu />

<div class="container mt-2 mb-2 mt-sm-4 mb-sm-4">
    @Body

    <div class="position-fixed fixed-bottom m-4">
        @if (IsOnline)
        {
        <h3 class="badge badge-success">Online</h3>
        }
        else
        {
        <h3 class="badge badge-danger">Offline</h3>
        }
    </div>
</div>
